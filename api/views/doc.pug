doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta( http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
    link(href="/public/css/admin.css" rel="stylesheet")
    link(rel="stylesheet" href="/public/css/finalcss.css") 
    script(src="https://polyfill.io/v3/polyfill.min.js?features=default")
    script(src="../public/finaljs.js")

    title Doctor
body
    .row
        div.col-lg-5
            -var nombre = usuario
            h1.text-primary Bienvenido #{nombre}
        div.col-lg-6.d-flex.align-items-center.justify-content-around
            a(class="btn btn-orange text-light" href="/doc") Obtener
            a(class="btn btn-danger text-light" href="/api/home") Salir

    div.w-100 
    div.row.w-100.mt-4
        div.col-lg-12.text-primary
            h1.fs-4 Lista de usuarios
            table(class="table text-primary")
                thead
                    tr  
                        th(scope="col") Id
                        th(scope="col") Primer Nombre
                        th(scope="col") Segundo Nombre
                        th(scope="col") Primer Apellido    
                        th(scope="col") Segundo Apellido
                        th(scope="col") Direccion Trabajo 
                        th(scope="col") Direccion Residencial
                        td 
                tbody       
                    if lista
                        each i in lista
                            tr 
                                td= i.numIdentificacion  
                                td= i.Nombre1
                                td= i.Nombre2
                                td= i.Apellido1
                                td= i.Apellido2
                                td= i.direccionTrab 
                                td= i.direccionRes
                                td
                                    a(href="doc/"+i.numIdentificacion class="btn btn-danger") Mostrar
    .w-100 
    .row 
        div(class="col-lg-12 m-3 text-primary")
            h1.fs-4 Mapa
            div(id="map" style="height: 600px")

            <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
            script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAAlOVnlN3tOK-sPYFP6gQNFxwTPy4w1yY&callback=initMap&libraries=&v=weekly" async)